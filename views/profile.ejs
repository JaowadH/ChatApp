<%- include('./partials/header') %>

<div class="max-w-2xl mx-auto mt-10 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg text-center">
  <h1 class="text-2xl font-bold text-blue-500 mb-4">
    <%= isSelf ? "Your Profile" : `${profileUser.username}'s Profile` %>
  </h1>

  <!-- Avatar -->
  <img
    src="https://api.dicebear.com/7.x/fun-emoji/svg?seed=<%= profileUser.username %>"
    alt="Avatar"
    class="w-32 h-32 rounded-full mx-auto mb-4 border-4 border-blue-300 dark:border-blue-700"
  />

  <!-- Info -->
  <p><strong>Username:</strong> <%= profileUser.username %></p>
  <p><strong>Joined:</strong>
    <% if (profileUser.joinDate) { %>
      <%= profileUser.joinDate.toDateString() %>
    <% } else { %>
      Unknown
    <% } %>
  </p>

  <% if (!isSelf) { %>
    <a
      href="/profile"
      class="mt-4 inline-block px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white text-sm font-semibold rounded-lg transition"
    >
      Back to your profile
    </a>
  <% } %>
</div>

<%- include('./partials/footer') %>
