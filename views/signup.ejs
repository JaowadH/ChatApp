<%- include('partials/header') %>

<!-- Full-page container with theme-aware background -->
<div class="min-h-screen bg-white dark:bg-gray-900 flex items-center justify-center px-4 transition-colors duration-300">

  <!-- Signup card box -->
  <div class="bg-gray-100 dark:bg-gray-800 p-8 rounded-2xl shadow-lg w-full max-w-md transition-colors duration-300">
    
    <!-- Title -->
    <h1 class="text-3xl font-bold text-center text-blue-600 dark:text-blue-400 mb-6">Create an Account</h1>

    <!-- Error message (if any) -->
    <% if (errorMessage) { %>
      <div class="bg-red-100 dark:bg-red-600 text-red-800 dark:text-white p-3 rounded mb-4 text-sm">
        <%= errorMessage %>
      </div>
    <% } %>

    <!-- Signup form -->
    <form action="/signup" method="POST" class="space-y-4">

      <!-- Username -->
      <div>
        <label for="username" class="block text-sm text-gray-800 dark:text-white">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          required
          class="w-full p-2 mt-1 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block text-sm text-gray-800 dark:text-white">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          required
          class="w-full p-2 mt-1 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-white border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-semibold transition duration-200"
      >
        Sign Up
      </button>
    </form>

    <!-- Redirect to login -->
    <p class="text-gray-700 dark:text-gray-400 text-center text-sm mt-6">
      Already have an account?
      <a href="/login" class="text-blue-500 dark:text-blue-400 hover:underline">Log in here</a>
    </p>
  </div>
</div>

<%- include('partials/footer') %>
